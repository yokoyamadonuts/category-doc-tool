{
  "name": "@mayyya/catdoc-mcp",
  "version": "0.1.0",
  "description": "Category-theoretic documentation tool with MCP server support for AI assistants",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "catdoc": "./src/index.ts",
    "catdoc-mcp": "./src/mcp.ts"
  },
  "exports": {
    ".": "./src/index.ts",
    "./mcp": "./src/mcp.ts"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "category-theory",
    "documentation",
    "ai-assistant",
    "claude"
  ],
  "author": "mayyya",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mayyya/catdoc-mcp"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "mcp": "bun run src/mcp.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test tests/domain tests/infrastructure",
    "test:integration": "bun test tests/integration",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "typecheck": "tsc --noEmit",
    "check": "bun run typecheck && bun run lint && bun run test",
    "ci": "bun run lint && bun run typecheck && bun run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "latest",
    "eslint": "^9.39.1",
    "typescript-eslint": "^8.48.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "commander": "^14.0.2",
    "hono": "^4.10.7",
    "neo4j-driver": "^6.0.1",
    "yaml": "^2.8.1",
    "zod": "^4.1.13"
  }
}
